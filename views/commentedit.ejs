<% layout('/layouts/boilerplate.ejs') -%>
<section id="edit-comment" class="py-16 px-4">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold mb-8">Edit Comment</h2>
        <form action="/api/v1/post/comment/edit/<%= comment._id %>" method="POST">
            <div class="mb-4">
                <label for="comment" class="block text-lg font-medium text-gray-700">Edit Your Comment</label>
                <textarea id="comment" name="comment" rows="4" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required><%= comment.content %></textarea>
            </div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Update Comment</button>
        </form>
    </div>
</section>
