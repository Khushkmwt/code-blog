<% layout('/layouts/boilerplate.ejs') %>

<!-- Contact Section -->
<section id="contact" class="py-16 px-4 bg-gray-50">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div class="bg-indigo-100 p-6 rounded-lg shadow-lg">
                <h3 class="text-2xl font-semibold mb-4">Contact Information</h3>
                <p class="text-lg mb-2">123 Street Name, City, Country</p>
                <p class="text-lg mb-2">Phone: +123456789</p>
                <p class="text-lg">Email: info@example.com</p>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <img src="/path/to/contact-image-1.jpg" alt="Contact Image 1" class="rounded-lg shadow-lg">
                <img src="/path/to/contact-image-2.jpg" alt="Contact Image 2" class="rounded-lg shadow-lg">
                <img src="/path/to/contact-image-3.jpg" alt="Contact Image 3" class="rounded-lg shadow-lg">
                <img src="/path/to/contact-image-4.jpg" alt="Contact Image 4" class="rounded-lg shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Career Section -->
<section id="career" class="bg-gray-50 py-16 px-4">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
                <h3 class="text-2xl font-semibold mb-6">Job Openings</h3>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h4 class="text-xl font-semibold mb-4">Software Engineer</h4>
                    <p class="text-base mb-4">We're looking for a skilled software engineer to join our team. Responsibilities include designing, developing, and testing software solutions.</p>
                    <p class="text-base mb-2 font-semibold">Requirements:</p>
                    <ul class="list-disc pl-6 mb-4">
                        <li class="text-base mb-1">Bachelor's degree in Computer Science or related field</li>
                        <li class="text-base mb-1">Proficiency in Java, Python, or similar languages</li>
                        <li class="text-base">Experience with web development frameworks</li>
                    </ul>
                    <a href="#" class="text-blue-600 font-semibold hover:text-blue-700 transition">Apply Now</a>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <img src="/path/to/career-image-1.jpg" alt="Career Image 1" class="rounded-lg shadow-lg">
                <img src="/path/to/career-image-2.jpg" alt="Career Image 2" class="rounded-lg shadow-lg">
                <img src="/path/to/career-image-3.jpg" alt="Career Image 3" class="rounded-lg shadow-lg">
                <img src="/path/to/career-image-4.jpg" alt="Career Image 4" class="rounded-lg shadow-lg">
            </div>
        </div>
    </div>
</section>
