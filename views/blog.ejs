<% layout('/layouts/boilerplate.ejs') -%>

<!-- Hero Section -->
<section id="hero" class="py-16 px-4 bg-gradient-to-b from-blue-500 to-blue-700 text-white">
    <div class="container mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4">Welcome to Code-Blog</h1>
        <p class="text-lg">Your source for the latest tech trends and insights.</p>
        <a href="/api/v1/post/create" class="inline-block mt-8 bg-white text-blue-500 hover:text-blue-700 px-6 py-3 rounded-lg shadow-md">Create New Blog</a>
    </div>
</section>


<!-- Blog Posts Section -->
<section id="blog-posts" class="py-16 px-4 bg-gray-100 text-gray-800">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">All Blog Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="blog-posts-container">
            <% posts.forEach((post, index) => { %>
                <div class="bg-pink-200 p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
                    <h3 class="text-xl font-bold mb-2"><%= post?.title %></h3>
                    <p class="text-gray-700 mb-4 bg-yellow-200">by <%= post?.author?.name %> | <%= post?.createdAt.toDateString() %></p>
                    <p class="text-gray-700 bg-blue-200"><%= post?.desc %></p>
                    <a href="/api/v1/blog/show/<%= post._id %>" class="text-blue-500 hover:underline">Read More</a>
                </div>
            <% }); %>
        </div>
        <!-- Pagination -->
        <div class="flex justify-center mt-8">
            <% if (hasPrevPage) { %>
                <a href="/api/v1/blog?page=<%= currentPage - 1 %>" class="bg-blue-500 text-white px-4 py-2 rounded-md mr-2 hover:bg-blue-600">Previous</a>
            <% } %>
            <% if (hasNextPage) { %>
                <a href="/api/v1/blog?page=<%= currentPage + 1 %>" class="bg-blue-500 text-white px-4 py-2 rounded-md ml-2 hover:bg-blue-600">Next</a>
            <% } %>
        </div>
    </div>
</section>


<!-- Tech Tips Section -->
<!-- Tech Tips Section -->
<section id="tech-tips" class="py-16 px-4 bg-gray-300 text-gray-800">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Tech Tips</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
                <h3 class="text-xl font-bold mb-2">Tip 1: Efficient Coding</h3>
                <p class="text-gray-200">Learn how to write more efficient code.</p>
            </div>
            <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
                <h3 class="text-xl font-bold mb-2">Tip 2: Debugging Techniques</h3>
                <p class="text-gray-200">Discover effective debugging techniques.</p>
            </div>
            <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
                <h3 class="text-xl font-bold mb-2">Tip 3: UI/UX Best Practices</h3>
                <p class="text-gray-200">Explore UI/UX best practices for web development.</p>
            </div>
        </div>
    </div>
</section>


<!-- Newsletter Subscription -->
<section id="newsletter" class="py-16 px-4 bg-blue-500 text-white">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Subscribe to Our Newsletter</h2>
        <p class="text-lg mb-8">Stay updated with our latest articles and news.</p>
        <form action="#" method="POST" class="flex items-center justify-center">
            <input type="email" name="email" placeholder="Your Email Address" class="rounded-l-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-r-md hover:bg-blue-700">Subscribe</button>
        </form>
    </div>
</section>
